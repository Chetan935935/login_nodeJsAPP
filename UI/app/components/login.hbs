<div class='login-container-full-body ct3'>
  <div class='login-header ct3'>
    <div class='login-header-logo'>
      <img
        src='https://cdn-icons-png.flaticon.com/512/2050/2050106.png'
        alt=''
      />
    </div>
    <div class='login-header-content'>
      <div class='header-title'>Welcome Back!</div>
    </div>
  </div>
  <div class='login-body ct3'>
    <input
      type='text'
      value={{this.userName}}
      {{on 'change' this.updateUserName}}
      name='userName'
      id=''
      placeholder='UserName'
    />
    <input
      type='password'
      value={{this.password}}
      {{on 'change' this.updatePassword}}
      name='password'
      id=''
      placeholder='Password'
    />
    <button
      class='submit-btn'
      {{on 'click' this.checkIfUserPresent}}
      type='button'
    >LOGIN</button>
  </div>
  <div class='sign-up-link'>
    Don't have an account?
    <LinkTo class='link' @route='sign-up'>Sign Up</LinkTo>
  </div>
</div>